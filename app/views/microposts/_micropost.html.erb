<li>
	<table class="entry">
		<tbody>
			<tr>
				<td class="micropost">
					<span class="content"><%= wrap(micropost.content) %></span>
					<span class="timestamp">Posted <%= time_ago_in_words(micropost.created_at) %> ago.</span>
				</td>
				<% if current_user?(micropost.user) %>
					<td class="delete">
						<%= link_to "delete", micropost, method: :delete, confirm: "You sure?", title: micropost.content %>
					</td>
				<% end %>
			</tr>
		</tbody>
	</table>
</li>
